"""
def ConvertirEspaciado(texto):
    resultado = ""
    for letra in texto:
        resultado += letra + " "
    return resultado
if __name__== '__main__':
    texto=input("ingrese un texto ")
    textoEspaciado=ConvertirEspaciado(texto)
    print(f"el texto espaciado es :{textoEspaciado}")
