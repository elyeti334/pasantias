def CalcularMaxMin(Lista):
    pares=0
    impares=0
    return pares,impares
if __name__== '__main__':
    listaPar=[]
    ListaImpar=[]
    CantValor=int(input("ingrese la cantidad de valores a ingresar "))
    for Valor in range(CantValor):   
        if Valor % 2 == 0:
            listaPar+=1
            print("el valor es par")
